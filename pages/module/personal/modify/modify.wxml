<view class="modify">
    <form bindsubmit="formSubmit">
        <view class="item">
            <view>姓名：</view>
            <input class="input" type="text" name="nickname" value="{{nickname}}" placeholder="请输入姓名" />
        </view>
        <view class="item">
            <view>性别：</view>
            <radio-group name="gender">
                <label>
                    <radio value="男" checked="{{ gender === '男' ? 'checked':'' }}" />
                    男
                </label>
                <label>
                    <radio value="女" checked="{{ gender === '女' ? 'checked':'' }}" />
                    女
                </label>
            </radio-group>
        </view>
        <button class="button" form-type="submit" type="primary">保存</button>
    </form>
</view>