<view>
    <form>
        <view class="page-section">
            <view class="item">
                <view>收货人姓名：</view>
                <view>{{ addressInfo.userName }}</view>
            </view>
            <view class="item">
                <view>邮编：</view>
                <view>{{ addressInfo.postalCode }}</view>
            </view>
            <view class="item">
                <view>地区：</view>
                <view>{{ addressInfo.provinceName }} {{ addressInfo.cityName }} {{ addressInfo.countyName }}</view>
            </view>
            <view class="item">
                <view>收货地址：</view>
                <view>{{ addressInfo.detailInfo }}</view>
            </view>
            <view class="item">
                <view>国家码：</view>
                <view>{{ addressInfo.nationalCode }}</view>
            </view>
            <view class="item">
                <view>手机号码：</view>
                <view>{{ addressInfo.telNumber }}</view>
            </view>
        </view>
    </form>
</view>

<view class="add" bindtap="chooseAddress">
    <image class="left" src="/images/personal/add.png" mode="aspectFit"/>
    <view class="text">获取收获地址</view>
    <image class="right" src="/images/personal/arrow.png" mode="widthFix"/>
</view>