/* pages/module/personal/person/person.wxss */
.person{
    display: flex;
    flex-direction: column;
}

.icon-view {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #FFFFCC;
    height: 400rpx;
    margin: 0 10rpx 80rpx;
}

.data {
    display: flex;
    justify-content: space-between;
    padding: 10rpx 10rpx;
}

.arrow {
    width: 50rpx;
    height: 50rpx;
}

.icon {
    width: 300rpx;
    height: 300rpx;
    border-radius: 50%;
}

.order {
    display: flex;
    margin-bottom: 80rpx;
}

.order-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 20rpx;
    flex: 1;
}

.order-image {
    width: 100rpx;
    height: 100rpx;
}