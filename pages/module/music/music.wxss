/* pages/module/music/music.wxss */
page {
    display: flex;
    flex-direction: column;
    background: #17181a;
    color: #ccc;
    height: 100%;
}

.tab {
    display: flex;
}

.tab-item {
    flex-grow: 1;
    font-size: 10pt;
    text-align: center;
    line-height: 72rpx;
    border-bottom: 6rpx solid #eee;
}

.tab-item.active {
    color: #c25b5b;
    border-bottom-color: #c25b5b;
}

.content {
    flex-grow: 1;
}

.content > swiper {
    height: 100%;
}

.player {
    background: #222;
    border-top: 1px solid #252525;
    height: 112rpx;
}