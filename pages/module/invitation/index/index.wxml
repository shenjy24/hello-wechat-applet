<view class="player player-{{ isPlayingMusic ? 'play' : 'pause' }}" bindtap="play">
    <image src="/images/invitation/music_icon.png"/>
    <image src="/images/invitation/music_play.png"/>
</view>

<!--背景图片-->
<image class="bg" src="/images/invitation/bg_1.png" />

<!--内容区域-->
<view class="content">
    <!--顶部GIF图片-->
    <image class="content-gif" src="/images/invitation/save_the_date.gif" />
    <!--标题-->
    <view class="content-title">邀请函</view>
    <!--新郎和新娘的合照-->
    <view class="content-avatar">
        <image src="/images/invitation/avatar.png"/>
    </view>
    <!--新郎和新娘的名字-->
    <view class="content-info">
        <view class="content-name" bindtap="callGroom">
            <image src="/images/invitation/tel.png" />
            <view>小明</view>
            <view>新郎</view>
        </view>
        <view class="content-wedding">
            <image src="/images/invitation/wedding.png" />
        </view>
        <view class="content-name" bindtap="callBride">
            <image src="/images/invitation/tel.png" />
            <view>小红</view>
            <view>新娘</view>
        </view>
    </view>
    <!--婚礼信息-->
    <view class="coontent-address">
        <view>我们诚邀您来参加我们的婚礼</view>
        <view>时间：2019年1月28日</view>
        <view>地点：北京市海淀区XX路XX酒店</view>
    </view>
</view>