.userinfo-view {
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    /* justify-content: space-between; */
    padding: 200rpx 0;
    box-sizing: border-box;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    margin: 50rpx 0;
    border: 1px solid #FFFAF0;
}

.userinfo-button {
    margin-top: 200rpx;
}